@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section class="section">
    <h3 class="form-title">@ViewData["Title"]</h3>

    <form id="registerForm" method="post" class="form-login-register" asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-wrapper">
            <label asp-for="Input.Email" class="form-field-label"></label>
            <span class="form-icon-wrapper"><i class="form-icon fa-solid fa-envelope"></i></span>
            <input asp-for="Input.Email" class="form-field form-email" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Input.Email" class="help is-danger"></span>
        </div>

        <div class="form-wrapper">
            <label asp-for="Input.Password" class="form-field-label"></label>
            <span class="form-icon-wrapper"><i class="form-icon form-icon-password fa-solid fa-eye-slash"></i></span>
            <input asp-for="Input.Password" class="form-field form-password" autocomplete="new-password" aria-required="true" />
            <span asp-validation-for="Input.Password" class="help is-danger"></span>
        </div>

        <div class="form-wrapper">
            <label asp-for="Input.ConfirmPassword" class="form-field-label"></label>
            <span class="form-icon-wrapper"><i class="form-icon form-icon-password fa-solid fa-eye-slash"></i></span>
            <input asp-for="Input.ConfirmPassword" class="form-field form-password" autocomplete="new-password" aria-required="true" />
            <span asp-validation-for="Input.ConfirmPassword" class="help is-danger"></span>
        </div>

        <div class="form-submit-wrapper">
            <button id="registerSubmit" type="submit" class="button is-primary is-rounded is-medium">Register</button>
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">
                Already have an account?
            </a>
        </div>
    </form>
</section>

