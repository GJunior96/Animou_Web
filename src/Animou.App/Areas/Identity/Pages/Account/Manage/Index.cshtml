@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Username" class="form-control" disabled />
                <label asp-for="Input.Username" class="form-label"></label>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            <div class="form-floating">
                <label asp-for="Input.Avatar" class="form-label" style="width:100%;"></label>
                @if (Model.Input.Avatar != null)
                {
                    <img id="avatar" style="width:350px;height:350px;object-fit:cover;" src="~/images/uploaded/@Model.Input.Avatar"/>
                }
                else
                {
                    <img id="avatar" style="width:350px;height:350px;object-fit:cover;" src="~/images/native/no-avatar.jpg"/>
                }
                <input type="file"
                       accept=".png, .jpg, .jpeg, .gif, .tif"
                       style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                       onchange="document.getElementById('avatar').src = window.URL.createObjectURL(this.files[0])"
                       asp-for="Input.Avatar" class="form-control" />
                <span asp-validation-for="Input.Avatar" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
