@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<section class="section">
    <h3 class="form-title">@ViewData["Title"]</h3>

    <form method="post" class="form-login-register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-wrapper">
            <label asp-for="Input.Email" class="form-field-label"></label>
            <span class="form-icon-wrapper"><i class="form-icon fa-solid fa-envelope"></i></span>
            <input asp-for="Input.Email" class="form-field form-email" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Input.Email" class="help is-danger"></span>
        </div>

        <div class="form-submit-wrapper">
            <button type="submit" class="button is-primary is-rounded is-medium">Reset Password</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
